extends layout
//bootstrap 사용하여 칸반보드 View단 정의
block content
	div.container
		div.jumbotron
			h1 칸반보드 
			p 이 보드는 RUSK의 프로젝트 공유 도구가 될겁니다.
			p 새로운 task를 만들고 싶으면 버튼을 누르면되요!
			div.form-group
				form(action='/createTask', method='post')
					input(type='text', name='contents' class='form-control')
					button(type='submit' class='btn btn-success') Task 만들기

		div.row
			div.col-lg-4
				ul.list-group
					li.list-group-item.active 할거
						span.badge= todoTasks.length
					each val in todoTasks
						div.input-group
							li.list-group-item= val
							div.input-group-btn
								form(action='/updateTask', method='post')
									input(type='hidden' name='status' value='In-Progress')
									button(type='submit' class='btn btn-info' name='contents' value= val) <string>></strong>
					
			div.col-lg-4
				ul.list-group
					li.list-group-item.active 하고있는거
						span.badge= inProgressTasks.length
					each val in inProgressTasks
						div.input-group
							li.list-group-item= val
							div.input-group-btn
								form(action='/updateTask', method='post')
									input(type='hidden' name='status' value='Done')
									button(type='submit' class='btn btn-info' name='contents' value= val) <strong>></strong>
			div.col-lg-4
				ul.list-group
					li.list-group-item.active 끝낸
						span.badge= doneTasks.length
					each val in doneTasks
						div.input-group
							li.list-group-item= val
							div.input-group-btn
								form(action='/removeTask', method='post')
									button(type='submit' class='btn btn-danger' name='contents' value= val) D	